{
  "name": "photobooth-server",
  "version": "1.0.0",
  "description": "포토부스 사진 관리 및 공유 서버",
  "main": "electron.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "app": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.masterpiece.photobooth",
    "productName": "Masterpiece Photobooth",
    "mac": {
      "category": "public.app-category.photography",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "electron.js",
      "server.js",
      "templates/**/*",
      "static/**/*",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "crypto": "^1.0.1",
    "ejs": "^3.1.9",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "multer": "^2.0.2",
    "ngrok": "^5.0.0-beta.2",
    "path": "^0.12.7",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  }
}
